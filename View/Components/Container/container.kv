<Container>:
    orientation: "vertical"
    type: "fluid"
    padding: [10, 10, 10, 10]
    state_hover: 0.4
    md_bg_color: app.theme_cls.surfaceContainerLowColor
    size_hint: None, None
    width: "90dp"
    height: "90dp"
    radius: fab_button.radius

    MDAnchorLayout:
        size_hint: 1, 1
        MDFabButton:
            id: fab_button
            style: "standard"
            adaptive_height: True
            icon: f"{root.text}"
            theme_font_size: 'Custom'
            font_size: "56dp"
            on_release:
                root.set_text(root.id, root.active)
